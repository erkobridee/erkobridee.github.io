---
import AvatarErkoBrideeManga from '#components/AvatarErkoBrideeManga.astro';

// social icons svg are from the feathericons
// https://feathericons.com/
// https://github.com/feathericons/feather
---

<div class="px-10 pt-10">
  <div class="relative mx-auto mb-32 mt-24 max-w-sm">
    <div class="overflow-hidden rounded bg-white shadow-md">
      <div class="absolute -mt-20 flex w-full justify-center">
        <div class="h-32 w-32">
          <AvatarErkoBrideeManga />
        </div>
      </div>

      <div class="mt-16 flex flex-col px-6">
        <div class="flex flex-col">
          <h1 class="mb-1 text-center text-3xl font-bold">Erko Bridee</h1>
          <p class="text-center text-sm text-gray-800">
            Senior Software Enginee
          </p>
        </div>

        <p class="pt-3 text-center text-base font-normal text-gray-600">
          I'm a mad computer scientist, but with bachelor's degree \o/
        </p>

        <div class="w-full border-b border-gray-200 pt-5"></div>

        <div
          class="flex w-full justify-center space-x-9 pb-5 pt-5 text-[#718096]"
        >
          <a
            href="https://www.linkedin.com/in/erkobridee"
            target="_blank"
            rel="noopener nofollow"
          >
            <div aria-label="LinkedIn">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-linkedin stroke-[1.5]"
              >
                <path
                  d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                ></path>
                <rect x="2" y="9" width="4" height="12"></rect>
                <circle cx="4" cy="4" r="2"></circle>
              </svg>
            </div>
          </a>

          <a
            href="https://github.com/erkobridee"
            target="_blank"
            rel="noopener nofollow"
          >
            <div aria-label="Github">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-github stroke-[1.5]"
              >
                <path
                  d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
                >
                </path>
              </svg>
            </div>
          </a>

          <a
            href="https://twitter.com/erkobridee"
            target="_blank"
            rel="noopener nofollow"
          >
            <div aria-label="Twitter">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-twitter stroke-[1.5]"
              >
                <path
                  d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
                >
                </path>
              </svg>
            </div>
          </a>

          <a
            href="https://www.instagram.com/erkobridee"
            target="_blank"
            rel="noopener nofollow"
          >
            <div aria-label="Instagram">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="feather feather-instagram stroke-[1.5]"
              >
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                ></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
